{% extends 'admin.html.twig' %}

{% block body %}
    <div class="text-sm breadcrumbs">
        <ul>
            <li>Guild Wars 2</li>
            <li>Chambre forte du sorcier</li>
            <li>{{ (objective.id)?'Modifier':'Ajouter' }}</li>
        </ul>
    </div>

    <h1 class="flex flex-start justify-start gap-4 pl-1 items-center mt-2">
        {% if objective.id %}
            Modifier&nbsp;: {{ objective.title }}
        {% else %}
            Ajouter un objectif
        {% endif %}

    </h1>

    {{ form_start(form) }}
        {{ form_row(form.uid) }}
        {{ form_row(form.title) }}
        {{ form_row(form.tip) }}
    {{ form_end(form) }}

{% endblock %}
