{% extends 'admin.html.twig' %}

{% block title %}Guild{% endblock %}

{% block body %}
    <h1>Guilde : {{ guild.name }}</h1>

    <table class="table rounded-lg shadow w-full my-4">
        <tbody>
            <tr>
                <th width="1">Id</th>
                <td>{{ guild.id }}</td>
            </tr>
            <tr>
                <th>Uid</th>
                <td>{{ guild.uid }}</td>
            </tr>
            <tr>
                <th>Nom de la guilde</th>
                <td>{{ guild.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ guild.description }}</td>
            </tr>
            <tr>
                <th>Ordre</th>
                <td>{{ guild.sortOrder }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ guild.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Clé API du maître de guilde</th>
                <td>{{ guild.token }}</td>
            </tr>
            <tr>
                <th>Identifiant de la guilde</th>
                <td>{{ guild.guildUid }}</td>
            </tr>
        </tbody>
    </table>

    <div class="flex gap-4 justify-between mb-4">
        <a href="{{ path('app_admin_lbm_ticket_guild_edit', {'id': guild.id}) }}" class="btn btn-primary">Modifier</a>
        <a href="{{ path('app_admin_lbm_ticket_guild_index') }}" class="btn btn-outline">Retourner à la liste</a>
    </div>

    {{ include('admin/lbm/ticket/guild/_delete_form.html.twig') }}
{% endblock %}
