{% extends 'admin.html.twig' %}

{% block title %}Validate index{% endblock %}

{% block body %}
    <h1>Validate index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Leader</th>
                <th>Players</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for validate in validates %}
            <tr>
                <td>{{ validate.id }}</td>
                <td>{{ validate.title }}</td>
                <td>{{ validate.leader }}</td>
                <td>{{ validate.players ? validate.players|join(', ') : '' }}</td>
                <td>{{ validate.createdAt ? validate.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ validate.updatedAt ? validate.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ validate.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_admin_lbm_ticket_validate_show', {'id': validate.id}) }}">show</a>
                    <a href="{{ path('app_admin_lbm_ticket_validate_edit', {'id': validate.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
