{% extends 'admin.html.twig' %}

{% block title %}Icône : {{ map_icon.name }}{% endblock %}

{% block body %}
    {% include '_breadcrumbs.html.twig' with {items: ['Enshrouded', 'Carte interactive', 'Icônes', 'Afficher']} %}

    <h1>Icône : {{ map_icon.name }}</h1>

    <table class="table rounded-lg shadow w-full my-4">
        <tbody>
            <tr>
                <th width="1">Id</th>
                <td>{{ map_icon.id }}</td>
            </tr>
            <tr>
                <th>Intitulé</th>
                <td>{{ map_icon.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{% if map_icon.icon %}<img src="{{ vich_uploader_asset( map_icon) }}" alt="">{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <div class="flex gap-4 justify-between">
        <a href="{{ path('app_admin_enshrouded_map_icon_edit', {'id': map_icon.id}) }}" class="btn btn-primary">Modifier</a>
        <a href="{{ path('app_admin_enshrouded_map_icon_index') }}" class="btn btn-outline">Retourner à la liste</a>
    </div>

    {{ include('admin/enshrouded/map_icon/_delete_form.html.twig') }}
{% endblock %}
