{% extends 'admin.html.twig' %}

{% block title %}Objet&nbsp;: {{ item.name }}{% endblock %}

{% block body %}
    <h1>Objet&nbsp;: {{ item.name }}</h1>

    <table class="table rounded-lg shadow w-full my-4">
        <tbody>
            <tr>
                <th width="1">Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ item.category.name }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ item.level }}</td>
            </tr>
            <tr>
                <th>Qualité</th>
                <td>{{ item.quality }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ item.description }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ item.comment }}</td>
            </tr>
            <tr>
                <th>Équipable</th>
                <td>{{ item.equippable }}</td>
            </tr>
            <tr>
                <th>Icône (96x96)</th>
                <td>
                    {% if item.icon %}<img src="{{ vich_uploader_asset(item)|imagine_filter('enshrouded_item_icon_96') }}" alt="">{% endif %}
                </td>
            </tr>
            <tr>
                <th>Icône (48x48)</th>
                <td>
                    {% if item.icon %}<img src="{{ vich_uploader_asset(item)|imagine_filter('enshrouded_item_icon_48') }}" alt="">{% endif %}
                </td>
            </tr>
            <tr>
                <th>Icône (24x24)</th>
                <td>
                    {% if item.icon %}<img src="{{ vich_uploader_asset(item)|imagine_filter('enshrouded_item_icon_24') }}" alt="">{% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="flex gap-4 justify-between mb-4">
        <a href="{{ path('app_admin_enshrouded_item_edit', {'id': item.id}) }}" class="btn btn-primary">Modifier</a>
        <a href="{{ path('app_admin_enshrouded_item_index') }}" class="btn btn-outline">Retourner à la liste</a>
    </div>

    {{ include('admin/enshrouded/item/_delete_form.html.twig') }}
{% endblock %}
