{% extends 'admin.html.twig' %}

{% block title %}Personnage&nbsp;: {{ npc.name }}{% endblock %}

{% block body %}
    {% include '_breadcrumbs.html.twig' with {items: ['Enshrouded', 'Personnages', 'Afficher']} %}

    <h1>Personnage&nbsp;: {{ npc.name }}</h1>

    <table class="table rounded-lg shadow w-full my-4">
        <tbody>
            <tr>
                <th width="1">Id</th>
                <td>{{ npc.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ npc.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ npc.description }}</td>
            </tr>
            <tr>
                <th>Icône</th>
                <td>
                    {% if npc.icon %}
                        <img src="{{ vich_uploader_asset(npc) }}" alt="">
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="flex gap-4 justify-between">
        <a href="{{ path('app_admin_enshrouded_npc_edit', {'id': npc.id}) }}" class="btn btn-primary">Modifier</a>
        <a href="{{ path('app_admin_enshrouded_npc_index') }}" class="btn btn-outline">Retourner à la liste</a>
    </div>

    {{ include('admin/enshrouded/npc/_delete_form.html.twig') }}
{% endblock %}
