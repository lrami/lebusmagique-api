{% for child in childs %}
    <tr>
        <td>{{ child.id }}</td>
        <td class="font-bold">
            {% for i in 0..child.lvl %}&ndash;&nbsp;{% endfor %}{{ child.name }}
        </td>
        <td>
            <div class="flex flex-end gap-3">
                    {% if not loop.first and move %}
                        <a href="{{ path('app_admin_enshrouded_recipe_category_move', {'id': child.id, 'type': 'up'}) }}" class="btn btn-sm btn-primary btn-outline btn-square">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18" />
                            </svg>
                        </a>
                    {% else %}
                        <button class="btn btn-sm btn-primary btn-outline btn-square" disabled>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18" />
                            </svg>
                        </button>
                    {% endif %}
                    {% if not loop.last and move %}
                        <a href="{{ path('app_admin_enshrouded_recipe_category_move', {'id': child.id, 'type': 'down'}) }}" class="btn btn-sm btn-primary btn-outline btn-square">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3" />
                            </svg>
                        </a>
                    {% else %}
                        <button class="btn btn-sm btn-primary btn-outline btn-square" disabled>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3" />
                            </svg>
                        </button>
                    {% endif %}
                <a href="{{ path('app_admin_enshrouded_recipe_category_show', {'id': child.id}) }}" class="btn btn-sm btn-primary btn-outline btn-square">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                </a>
                <a href="{{ path('app_admin_enshrouded_recipe_category_edit', {'id': child.id}) }}" class="btn btn-sm btn-primary btn-outline btn-square">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                    </svg>
                </a>
            </div>
        </td>
    </tr>
    {% include 'admin/enshrouded/recipe_category/_children.html.twig' with {childs: child.__children, move: true} %}
{% endfor %}