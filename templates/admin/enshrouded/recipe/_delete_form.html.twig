{% if is_granted('ROLE_ADMIN') %}
<form method="post" action="{{ path('app_admin_enshrouded_recipe_delete', {'id': recipe.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">
    <button class="btn btn-error mt-12">Supprimer la recette</button>
</form>
{% endif %}