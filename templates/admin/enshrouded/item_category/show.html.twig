{% extends 'admin.html.twig' %}

{% block title %}Catégorie&nbsp;: {{ item_category.name }}{% endblock %}

{% block body %}

    {% include '_breadcrumbs.html.twig' with {items: ['Enshrouded', 'Objets', 'Catégories', 'Afficher']} %}

    <h1>Catégorie&nbsp;: {{ item_category.name }}</h1>

    <table class="table rounded-lg shadow w-full my-4">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ item_category.id }}</td>
            </tr>
            <tr>
                <th>Intitulé</th>
                <td>{{ item_category.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="flex gap-4 justify-between mb-4">
        <a href="{{ path('app_admin_enshrouded_item_category_edit', {'id': item_category.id}) }}" class="btn btn-primary">Modifier</a>
        <a href="{{ path('app_admin_enshrouded_item_category_index') }}" class="btn btn-outline">Retourner à la liste</a>
    </div>

    {{ include('admin/enshrouded/item_category/_delete_form.html.twig') }}
{% endblock %}
