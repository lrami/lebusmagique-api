{% if is_granted('ROLE_ADMIN') %}
<form method="post" action="{{ path('app_admin_enshrouded_recipe_source_delete', {'id': recipe_source.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe_source.id) }}">
    <button class="btn btn-error mt-12">Supprimer la source</button>
</form>
{% endif %}